<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="1dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_movie_list_item">


    <ImageView
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:id="@+id/coverImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/movie_placeholder"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/titleTextView"
        android:layout_toRightOf="@+id/coverImageView"
        android:layout_toEndOf="@+id/coverImageView"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        tools:text="The Night of the generals (1967)... Sparrows Can't Sing (1963)"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#5a5858" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:layout_alignBottom="@+id/coverImageView"
        android:layout_toRightOf="@+id/coverImageView"
        android:layout_toEndOf="@+id/coverImageView"
        android:src="@drawable/star"
        android:contentDescription="Star IMDB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        tools:text="9.9"
        android:id="@+id/ratingTextView"
        android:layout_alignBottom="@+id/coverImageView"
        android:layout_toRightOf="@+id/star"
        android:layout_toEndOf="@+id/star"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"/>


</RelativeLayout>